{
  "name": "otx-maestro",
  "displayName": "OTX Maestro",
  "description": "A VS Code extension to support the Onethinx Core Module.",
  "version": "1.0.3",
  "publisher": "Onethinx",
  "repository": {
    "type": "git",
    "url": "https://github.com/onethinx/OTX-Maestro.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.63.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "contributes": {
    "jsonValidation": [
      {
          "fileMatch": ".vscode/tasks.json",
          "url": "./src/tasks-schema.json"
      }
   ],
    "configuration": {
      "type": "object",
      "title": "OTX Maestro Configuration",
      "properties": {
        "otx-maestro.defaultDebugger": {
          "type": "string",
          "default": "",
          "description": "Default debugger"
        }
      }
    },
    "commands": [
      {
        "command": "otx-maestro.updateProject",
        "title": "Update Project"
      },
      {
        "command": "otx-maestro.selProg",
        "title": "Select Programmer"
      },
      {
        "command": "otx-maestro.clean",
        "title": "Clean-Reconfigure"
      },
      {
        "command": "otx-maestro.build",
        "title": "Build"
      },
      {
        "command": "otx-maestro.launch",
        "title": "Build-and-Launch"
      }
    ]
  },
  "keywords": [
    "cortex-m",
    "gdb",
    "onethinx",
    "otx-18",
    "lorawan",
    "debug",
    "embedded"
  ],
  "extensionDependencies": [
    "ms-vscode.cpptools",
    "onethinx.cortex-gdb",
    "mrmomo.meson-build"
  ]
}
